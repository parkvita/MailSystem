{{>layout/header}}
<h1>메일 시스템</h1>
<div class = "col-md-12">
    <div class="col-md-4">
        <form>
            <div class="form-group">

                <input type="text" class="form-control"
                       id = "address" >
            </div>
            <div class ="form-group">

                <input type="text" class="form-control"
                       id="title" >
            </div>
            <div class="form-group">

                <textarea class="form-control"
                          id="content" placeholder="내용을 입력하세요"></textarea>
            </div>
        </form>

        <button type = "button" class = "btn btn-primary" id="btn-send">발송</button>
    </div>
</div>
{{>layout/footer}}


